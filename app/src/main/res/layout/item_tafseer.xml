<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_4sdp"
        android:layout_margin="@dimen/_10sdp"
        android:layout_marginVertical="@dimen/_8sdp"
        android:layout_marginHorizontal="@dimen/_5sdp"

        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@color/gray_white">

            <TextView
                android:id="@+id/search_sora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primrycolor"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp"
                android:padding="@dimen/_6sdp"
                android:textStyle="bold"

                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/search_ayaNm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_16sdp"
                android:gravity="center"
                android:textStyle="bold"
                android:padding="@dimen/_6sdp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/search_sora" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                android:layout_marginHorizontal="@dimen/_8sdp"

                app:layout_constraintTop_toBottomOf="@id/search_ayaNm" />

            <TextView
                android:id="@+id/search_aya"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/black"
                android:padding="@dimen/_6sdp"
                app:layout_constraintTop_toBottomOf="@+id/search_ayaNm"

                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>